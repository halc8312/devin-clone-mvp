# MVP Environment Variables - Minimal Setup
# Copy this file to .env and fill in your values

# === BACKEND (Render.com) ===
# Only 1 manual setting required!

# AI - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Auto-configured by render.yaml (no manual setup needed)
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=auto-generated-by-render
DATABASE_URL=auto-configured-by-render
FRONTEND_URL=https://your-app.vercel.app
BACKEND_CORS_ORIGINS=https://your-app.vercel.app

# === FRONTEND (Vercel) ===
# Only 3 manual settings required!

# API URL - Your Render backend URL
NEXT_PUBLIC_API_URL=https://your-api.onrender.com

# NextAuth - Your Vercel frontend URL
NEXTAUTH_URL=https://your-app.vercel.app

# NextAuth Secret - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-32-char-secret

# MVP: Disabled features (no setup required)
NEXT_PUBLIC_ENABLE_OAUTH=false
NEXT_PUBLIC_ENABLE_PAYMENTS=false

# === TOTAL MANUAL SETTINGS: 4 ===
# 1. ANTHROPIC_API_KEY
# 2. NEXT_PUBLIC_API_URL  
# 3. NEXTAUTH_URL
# 4. NEXTAUTH_SECRET